# =============================================================================
# 赛博克隆 AI 助手系统 - 环境配置
# =============================================================================

# DeepSeek API配置 (必须)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# 模型配置 (兼容老版本配置名)
# 新配置名 (推荐)
MODEL_CHAT=deepseek-chat
MODEL_REASONER=deepseek-reasoner
# 老配置名 (向后兼容)
# CHAT_MODEL=deepseek-chat
# REASONING_MODEL=deepseek-reasoner

# 系统配置
TIMEOUT_SECONDS=30
MAX_TOOL_CALLS_PER_TURN=3
MAX_ASK_USER_CYCLES=2
LOG_LEVEL=INFO

# 数据路径
LOG_DIR=data/logs

# 开发设置
ENABLE_MOCK_CLIENT_IF_NO_KEY=true

# =============================================================================
# 扩展配置 (来自老版本系统，可选)
# =============================================================================

# Gemini API配置 (可选，用于扩展)
GEMINI_API_KEY=your_gemini_api_key_here

# 仓库配置 (可选)
HF_TOKEN=your_huggingface_token_here
GIT_TOKEN=your_github_token_here
GITHUB_REPO=your_github_repo

# 功能开关
RAG_ENABLED=false
TOOLS_ENABLED=true

# LLM参数
MAX_TOKENS=4096
TEMPERATURE=0.7
MAX_RETRIES=3

# 模型分工配置 (可选)
PLANNER_MODEL=deepseek-reasoner
PLANNER_TEMPERATURE=0.2
JUDGE_MODEL=deepseek-reasoner
JUDGE_TEMPERATURE=0.2
EXECUTOR_MODEL=deepseek-chat
EXECUTOR_TEMPERATURE=0.1

# 输出目录配置 (可选)
OUTPUT_DIR=output

# M3 Orchestrator配置 (可选)
USE_M3_ORCHESTRATOR=true
MAX_TOOL_CALLS_PER_ACT=15
MAX_TOTAL_TOOL_CALLS=6
MAX_PLAN_ITERS=2
MAX_LATENCY_MS=60000
MAX_TOKENS_PER_STAGE=4000

# 严格JSON输出开关
STRICT_JSON_MODE=true
